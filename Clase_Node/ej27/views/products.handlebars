<h1>Apple - Products</h1>
<p>Listado de productos</p>

{{#each products}}
  <h2>
    <a href="/products/{{@index}}">{{this.section}}</a>
  </h2>
  <ul>
    {{#each items}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/each}}

<h2>Productos Por AJAX</h2>
